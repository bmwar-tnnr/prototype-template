{
  "compilerOptions": {
    "composite": true,
    "outDir": "dist",
    "module": "Preserve",
    "target": "ESNext",
    "declaration": true,
    "declarationMap": true,
    "strict": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "jsx": "react-jsx"
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.tsx",
    "vitest.setup.ts",
    "vitest.config.ts"
  ],
  "exclude": ["node_modules", "dist"]
}
